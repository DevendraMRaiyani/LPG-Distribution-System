<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
    <system.serviceModel>
        <bindings>
            <basicHttpBinding>
                <binding name="BasicHttpBinding_ICustomerMgnt" />
                <binding name="BasicHttpBinding_IStockMgnt" />
                <binding name="BasicHttpBinding_IMainService" />
                <binding name="BasicHttpBinding_ITransactionMgnt" />
            </basicHttpBinding>
        </bindings>
        <client>
            <endpoint address="http://localhost:54601/CustomerMgnt.svc" binding="basicHttpBinding"
                bindingConfiguration="BasicHttpBinding_ICustomerMgnt" contract="CustomerMgntRef.ICustomerMgnt"
                name="BasicHttpBinding_ICustomerMgnt" />
            <endpoint address="http://localhost:54601/StockMgnt.svc" binding="basicHttpBinding"
                bindingConfiguration="BasicHttpBinding_IStockMgnt" contract="StockMgntRef.IStockMgnt"
                name="BasicHttpBinding_IStockMgnt" />
            <endpoint address="http://localhost:54601/MainService.svc" binding="basicHttpBinding"
                bindingConfiguration="BasicHttpBinding_IMainService" contract="MainService.IMainService"
                name="BasicHttpBinding_IMainService" />
            <endpoint address="http://localhost:54601/TransactionMgnt.svc"
                binding="basicHttpBinding" bindingConfiguration="BasicHttpBinding_ITransactionMgnt"
                contract="TransactionMgnt.ITransactionMgnt" name="BasicHttpBinding_ITransactionMgnt" />
        </client>
    </system.serviceModel>
</configuration>